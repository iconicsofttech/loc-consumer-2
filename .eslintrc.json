{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "es6": true,
        "mocha": true,
        "jest":true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "max-lines-per-function": [
            "error",
            {
                "max": 50,
                "skipBlankLines": true,
                "skipComments": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-extend-native": "off",
        "no-prototype-builtins": "off",
        "indent": "off",
        "no-case-declarations": "off",
        "no-var": "error",
        "no-unused-vars": "error"
    }
}